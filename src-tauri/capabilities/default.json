{
    "identifier": "default",
    "description": "Default capabilities for the Suzent desktop application",
    "windows": [
        "main"
    ],
    "permissions": [
        "core:default",
        "dialog:default",
        "core:window:default",
        {
            "identifier": "shell:allow-execute",
            "allow": [
                {
                    "args": true,
                    "name": "binaries/suzent-backend",
                    "sidecar": true
                }
            ]
        },
        "core:window:allow-start-dragging",
        "core:window:allow-close",
        "core:window:allow-minimize",
        "core:window:allow-toggle-maximize",
        "fs:default",
        {
            "identifier": "fs:allow-read",
            "allow": [
                {
                    "path": "$HOME/**/*"
                },
                {
                    "path": "C:/**/*"
                },
                {
                    "path": "D:/**/*"
                }
            ]
        },
        {
            "identifier": "fs:allow-exists",
            "allow": [
                {
                    "path": "$HOME/**/*"
                },
                {
                    "path": "C:/**/*"
                },
                {
                    "path": "D:/**/*"
                }
            ]
        }
    ]
}