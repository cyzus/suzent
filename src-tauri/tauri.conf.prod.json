{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "SUZENT",
  "version": "0.3.0",
  "identifier": "com.suzent.app",
  "build": {
    "beforeBuildCommand": "cd ../frontend && npm run build",
    "beforeDevCommand": "cd ../frontend && npm run dev",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../frontend/dist"
  },
  "app": {
    "windows": [
      {
        "title": "SUZENT - Your Personal Agent",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "transparent": false,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' http://localhost:* ws://localhost:* http://127.0.0.1:* ws://127.0.0.1:*; img-src 'self' data: blob: http://localhost:* http://127.0.0.1:*; frame-src 'self' http://localhost:* http://127.0.0.1:*; style-src 'self' 'unsafe-inline'"
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": {
      "resources/": "resources/"
    },
    "externalBin": [],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "linux": {
      "deb": {
        "files": {}
      },
      "rpm": {
        "files": {}
      }
    },
    "macOS": {
      "frameworks": [],
      "files": {},
      "minimumSystemVersion": "10.13"
    },
    "windows": {
      "nsis": {
        "installMode": "perMachine",
        "installerHooks": "./nsis/hooks.nsh"
      },
      "wix": {
        "language": "en-US",
        "fragmentPaths": [
          "./wix/path.wxs"
        ],
        "componentGroupRefs": [
          "PathGroup"
        ]
      }
    }
  }
}
